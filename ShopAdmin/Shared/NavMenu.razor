                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/yearlysalesgraph">
                        <span class="oi oi-plus" aria-hidden="true"></span>Sales's Graph
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/employeework">
                        <span class="oi oi-plus" aria-hidden="true"></span> Employee Work
                    </NavLink>
                </div>
                

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="employeeworkbydate">
                        <span class="oi oi-plus" aria-hidden="true"></span> Work By Date
                    </NavLink>
                </div> 
                
            </Authorized>
        </AuthorizeView>
       

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
