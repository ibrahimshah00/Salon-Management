                    </NavLink>
                   
                
                    
                
                    
                </div>
           
                
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="ShopOwner">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="getEmployeeShop">
                        <span class="oi oi-plus" aria-hidden="true"></span> Shop Owner
                    </NavLink>
                </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="dailysale">
                            <span class="oi oi-plus" aria-hidden="true"></span> Daily Sale
                        </NavLink>
                    </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="monthlysales">
